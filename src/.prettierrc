{
  "printWidth": 80, // Максимальная длина строки
  "tabWidth": 2, // Количество пробелов в табуляции
  "useTabs": false, // Использовать пробелы вместо табуляции
  "semi": true, // Добавлять точку с запятой в конце строки
  "singleQuote": true, // Использовать одинарные кавычки вместо двойных
  "quoteProps": "as-needed", // Добавлять кавычки к свойствам объекта только при необходимости
  "jsxSingleQuote": false, // Использовать одинарные кавычки в JSX
  "trailingComma": "es5", // Добавлять запятую в последнем элементе (es5, none, all)
  "bracketSpacing": true, // Добавлять пробелы между скобками
  "jsxBracketSameLine": false, // Размещать > на той же строке в многострочных элементах JSX
  "arrowParens": "always", // Всегда добавлять круглые скобки вокруг аргументов стрелочных функций
  "proseWrap": "preserve", // Заворачивать markdown текст (always, never, preserve)
  "htmlWhitespaceSensitivity": "css", // Учитывать ли пробелы в HTML в соответствии с CSS
  "endOfLine": "lf", // Конец строки (lf, crlf, cr, auto)
  "embeddedLanguageFormatting": "auto" // Форматировать встроенные языки автоматически
}
